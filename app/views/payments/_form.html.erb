<%= form_with model: [ @obligation, Payment.new ] do |form| %>
  <% if @obligation.errors.any? %>
    <% @obligation.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg %></div>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= render 'layouts/center_p', text: "Amount" %>
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text"><%= @obligation.currency %></div>
      </div>
      <%= form.number_field :amount, min: 0, step: 0.01, class: 'form-control' %>
    </div>
  </div>
  <div class="d-flex justify-content-end">
    <%= render 'layouts/submit_form', form: form, text: 'Create' %>
  </div>
<% end %>
