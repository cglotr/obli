<%= form_for @payment, url: obligation_payments_path(@obligation) do |form| %>
  <% if @payment.errors.any? %>
    <%= render 'layouts/flash_alert', alerts: @payment.errors.full_messages %>
  <% end %>
  <div class="form-group">
    <%= render 'layouts/center_p', text: "Amount" %>
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text"><%= @obligation.currency %></div>
      </div>
      <%= form.number_field :amount, min: 0, step: 0.01, class: 'payment-amount-field form-control' %>
    </div>
  </div>
  <%= render 'layouts/center_p', text: 'Recent payments:' %>
  <div class="d-flex justify-content-center">
    <% @recent_payments.each do |payment| %>
      <div class="new-payment btn btn-link px-1">[<%= payment %>]</div>
    <% end %>
  </div>
  <div class="d-flex justify-content-end">
    <%= render 'layouts/submit_form', form: form, text: 'Create' %>
  </div>
<% end %>
