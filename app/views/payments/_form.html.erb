<div class="card">
  <div class="card-body">
    <%= form_with model: [ @obligation, Payment.new ] do |form| %>
      <div class="form-group">
        <%= form.label :amount %>
        <%= form.number_field :amount, min: 0, step: 0.01, class: 'form-control' %>
      </div>
      <%= form.submit 'Create', class: 'btn btn-link' %>
    <% end %>
  </div>
</div>
